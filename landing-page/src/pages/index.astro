  <script is:inline>
      function openLightbox(element) {
          const lightbox = document.getElementById('lightbox');
          const lbImg = document.getElementById('lightbox-img');
          const lbVid = document.getElementById('lightbox-video');
          
          lightbox.classList.remove('hidden');
          document.body.style.overflow = 'hidden'; // Prevent scrolling

          // Reset
          lbImg.classList.add('hidden');
          lbVid.classList.add('hidden');
          lbVid.pause();

          if (element.tagName === 'IMG') {
              lbImg.src = element.src;
              lbImg.classList.remove('hidden');
          } else if (element.tagName === 'VIDEO') {
              // Try to find source, or use currentSrc
              const src = element.querySelector('source') ? element.querySelector('source').src : element.currentSrc;
              lbVid.src = src;
              lbVid.classList.remove('hidden');
              lbVid.play();
          }
      }

      function closeLightbox() {
            const lightbox = document.getElementById('lightbox');
            lightbox.classList.add('hidden');
            document.getElementById('lightbox-video').pause();
            document.body.style.overflow = ''; // Restore scrolling
      }
      
      // Close on Escape key
      document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape') closeLightbox();
      });
  </script>

